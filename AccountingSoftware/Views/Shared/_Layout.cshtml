<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccountingSoftware</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AccountingSoftware.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">                  
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Открыть таблицы
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                @*<li><a class="dropdown-item" asp-area="" asp-controller="Audiences" asp-action="Index">Аудитории</a></li>*@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Computers" asp-action="Index">Компьютеры</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Index">Работники</a></li>
                                @*<li><a class="dropdown-item" asp-area="" asp-controller="Licences" asp-action="Index">Лицензии</a></li>*@
                                <li><a class="dropdown-item" asp-area="" asp-controller="SoftwareTechnicalDetails" asp-action="Index">Программное обеспечение</a></li>
                                @*<li><a class="dropdown-item" asp-area="" asp-controller="SubjectAreas" asp-action="Index">Предметные области</a></li>*@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Softwares" asp-action="Index">Список лицензий</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="InstalledSoftware" asp-action="Index">Список установленного ПО</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="LicenceDetails" asp-action="Index">Детализация лицензирования</a></li>
                                @*<li><a class="dropdown-item" asp-area="" asp-controller="LicenceTypes" asp-action="Index">Типы лицензий</a></li>*@
                                                                                               
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AccountingSoftware - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
