@model IEnumerable<AccountingSoftware.Models.Audience>
@{
    ViewData["Title"] = "Выбор аудитории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Выбор аудитории</h1>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @using (Html.BeginForm())
                    {
                        <div>
                            <input type="hidden" name="audienceId" value="@item.Id" />
                            <input type="submit" value="Выбрать" class="btn btn-primary" />
                        </div>
                    }
                </td>
            </tr>
    }
</table>