

@model AccountingSoftware.Models.SoftwareTechnicalDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Программное обеспечение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
           @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="SubjectAreaId" asp-route-subjectAreaId="@ViewBag.SubjectArea.Id" class="control-label">Предметная область: @ViewBag.SubjectArea.Name</label>
                <input type="hidden" name="subjectAreaId" value="@ViewBag.SubjectAreaId">
                
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredSpace" class="control-label"></label>
                <input asp-for="RequiredSpace" class="form-control" />
                <span asp-validation-for="RequiredSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Выберите фото</h5>
                <div class="mt-4">
                    <input type="file" name="upload" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if ((bool?)TempData.Peek("fromSelectSoftware") != true)
    {
        <a asp-action="Index">Вернуться к списку</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
