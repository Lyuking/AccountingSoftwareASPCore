@model IEnumerable<AccountingSoftware.Models.SubjectArea>

<h1>Выбор предметной области</h1>

<div class="form-group">
    <a asp-controller="SubjectAreas" asp-action="Create" asp-route-fromSoftwareTechnicalDetails="true" class="btn btn-info">Добавить новую</a>
</div>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
        @Html.DisplayNameFor(model => model.Category)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
        @Html.DisplayFor(modelItem => item.Category)
        </td>*@
            <td>
                
                @using (Html.BeginForm())
                {
                    <form asp-action="Index" asp-controller="SoftwareTechnicalDetailsAdding" method="post">
                    <div>
                        <input type="hidden" name="subjectAreaId" value="@item.Id" />
                        <input type="submit" value="Выбрать" method="post" class="btn btn-primary" />
                    </div>
                    </form>
                    
                }
            </td>
        </tr>
    }
</table>