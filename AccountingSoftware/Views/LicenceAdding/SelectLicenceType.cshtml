@model IEnumerable<AccountingSoftware.Models.LicenceType>

@{
    ViewData["Title"] = "Выбор типа лицензии";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Выбор типа лицезнии</h1>

