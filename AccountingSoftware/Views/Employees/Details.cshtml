@model AccountingSoftware.Models.Employee

@{
    ViewData["Title"] = "Детализация работника";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детализация работника</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patronymic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronymic)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
<hr />
<h4>Список привязанных лицензий</h4>
<table class="table">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Computers.First().N)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Licences.First().Softwares.First().SoftwareTechnicalDetails.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licences.First().LicenceDetails.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licences.First().LicenceType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licences.First().LicenceDetails.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licences.First().LicenceDetails.DateEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var licence in Model.Licences)
        {
            @foreach(var software in licence.Softwares )
            {
            <tr>
                <td>
                    @Html.DisplayFor(model => software.SoftwareTechnicalDetails.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => licence.LicenceDetails.Key)
                </td>
                <td>
                        @Html.DisplayFor(model => licence.LicenceType.Name)
                </td>
                <td>
                        @Html.DisplayFor(model => licence.LicenceDetails.DateStart)
                </td>
                <td>
                        @Html.DisplayFor(model => licence.LicenceDetails.DateEnd)
                </td>               
            </tr>
            }
        }
    </tbody>
</table>