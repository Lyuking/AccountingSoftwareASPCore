@model IEnumerable<AccountingSoftware.Models.Audience>


<h1>Привязка компьютера к аудитории</h1>

<div class="form-group">
    <a asp-controller="Audiences" asp-action="Create" asp-route-fromComputers="true" class="btn btn-info">Создать нового</a>
    <a asp-controller="ComputerAdding" asp-action="WithoutAudience" class="btn btn-info">Пропустить выбор аудитории</a>
</div>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Category)
        </th>*@
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                @Html.DisplayFor(modelItem => item.Category)
                </td>*@
                <td>
                @using (Html.BeginForm())
                {
                        <div>
                            <input type="hidden" name="AudienceId" value="@item.Id"/>
                            <input type="submit" value="Выбрать" class="btn btn-primary" />
                        </div>
                }
                </td>
            </tr>
    }
</table>
