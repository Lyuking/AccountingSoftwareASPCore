@model AccountingSoftware.Models.SoftwareTechnicalDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>SoftwareTechnicalDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectAreaId" class="control-label"></label>
                <select asp-for="SubjectAreaId" class="form-control" asp-items="ViewBag.SubjectAreaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control summernote" id="summernote"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredSpace" class="control-label"></label>
                <input asp-for="RequiredSpace" class="form-control" />
                <span asp-validation-for="RequiredSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="mt-4">
                    <input type="file" name="upload" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $('#summernote').summernote({
            height: 100
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
